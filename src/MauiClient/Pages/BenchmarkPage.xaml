<?xml version="1.0" encoding="utf-8" ?>
<toolkit:CContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="clr-namespace:CloakTunnel.MauiClient.Toolkit"
    xmlns:views="clr-namespace:CloakTunnel.MauiClient.ViewModels"
    xmlns:controls="clr-namespace:CloakTunnel.MauiClient.Controls"
    x:Class="CloakTunnel.MauiClient.Pages.BenchmarkPage"
    Title="Benchmark">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <AbsoluteLayout
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand">
            <Button
                AbsoluteLayout.LayoutBounds="0, 0"
                WidthRequest="200"
                HeightRequest="200"
                CornerRadius="100"
                Background="{StaticResource PrimaryBrush}"
                Clicked="Benchmark_Clicked" />
            <ImageButton 
                x:Name="p_roundImageButton"
                AbsoluteLayout.LayoutBounds="10, 10"
                WidthRequest="180"
                HeightRequest="180"
                Source="benchmark.svg"
                InputTransparent="True" />
        </AbsoluteLayout>
        <Label
            x:Name="p_progressLabel"
            Grid.Row="1"
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="Start"
            Text=""
            FontSize="Large"/>
    </Grid>





</toolkit:CContentPage>
